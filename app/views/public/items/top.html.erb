
<section class="section1">
<section class="wrapper flex">
	<div class="sidebar">
		<h3>ジャンル一覧</h3>
		<% @genres.each do |genre| %>
			<%= link_to genre.name, items_path(genre_id: genre.id) %>
		<% end %>
	</div>
	
	
	<div class="content">
		<div class="mv">
			<p>
				ようこそ、Assembly-hallへ!<br>
				このサイトは、最新のビジネス情報販売サイトになります！<br>
				会員でない方も商品の閲覧することはできますが、<br>
				購入には会員登録が必要になります。<br>
			</p>
		</div>
		<h2 class="section-ttl">オススメ情報！</h2>
		<div class="items">
			<% @items.each do |item| %>
				<%= link_to item_path(item) do %>
					<%= attachment_image_tag item, :image, format: "jpeg", fallback: "no-image.png" %>
					<h5><%= item.genre.name %></h5>
					<p><%= item.name %></p>
					<p><%= item.with_tax_price %>円</p>
				<% end %>
			<% end %>
		</div>
	</div>
</section>
</section>